<component type="desktop">
  <id>org.kde.accessibilityinspector</id>
  <provides>
    <binary>accessibilityinspector</binary>
  </provides>
  <name>Acccessibility Inspector</name>
  <summary>Inspect your application accessibility tree</summary>
  <description>
    <p>Acccessibility Inspector is like the name suggest an inspector for your application accessibility tree. It lets you check all the item exposed via At-SPI to .</p>
  </description>
  <url type="homepage">https://apps.kde.org/accessibilityinspector/</url>
  <url type="bugtracker">https://bugs.kde.org/enter_bug.cgi?product=AccessibilityInspector</url>
  <categories>
    <category>Development</category>
  </categories>
  <developer id="https://kde.org">
    <name>The KDE Community</name>
  </developer>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>LGPL-2.0-or-later</project_license>
  <custom>
    <value key="KDE::matrix">#kde-accessibility:kde.org</value>
  </custom>
  <launchable type="desktop-id">org.kde.accessibilityinspector.desktop</launchable>
  <content_rating type="oars-1.1" />
  <screenshots>
    <screenshot type="default">
      <image>https://cdn.kde.org/screenshots/accessibility-inspector/properties.png</image>
      <caption>The properties of an node of the accessibility tree.</caption>
    </screenshot>
    <screenshot type="default">
      <image>https://cdn.kde.org/screenshots/accessibility-inspector/events.png</image>
      <caption>The list of all the recent events.</caption>
    </screenshot>
  </screenshots>
  <translation type="gettext">accessibilityinspector</translation>
</component>
